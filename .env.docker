# Production environment variables
APP_NAME=Career-Center
APP_ENV=production
APP_KEY=base64:your-32-character-secret-key
APP_DEBUG=false
APP_TIMEZONE=Africa/Casablanca
APP_URL=https://your-domain.com

##** Career Center Specific Configurations **##
AGREEMENT_QR_CODE_SALT=your-salt-here
PRIVATE_KEY_PATH=/var/www/html/storage/keys/private.key
PUBLIC_KEY_PATH=/var/www/html/storage/keys/public.key

## Google sheets API
GOOGLE_APPLICATION_NAME=Career-Center
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT=https://your-domain.com/auth/google/callback
GOOGLE_DEVELOPER_KEY=your-developer-key
GOOGLE_SERVICE_ENABLED=true
GOOGLE_SERVICE_ACCOUNT_JSON_LOCATION=/var/www/html/storage/google-service-account.json

DEFENSES_SPREADSHEET_ID=your-spreadsheet-id
DEFENSES_SHEET_ID=your-sheet-id

# If enabled you should run proper migrations
# php artisan migrate --path=database/migrations/bolt
BOLT_ENABLED=false
##** End of Career Center Specific Configurations **##

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=career_center
DB_USERNAME=career_user
DB_PASSWORD=your-secure-password
DB_ROOT_PASSWORD=your-root-password

BACKEND_DB_CONNECTION=${DB_CONNECTION}

# Cache configuration
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis configuration
REDIS_HOST=redis
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

# Mail configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Additional Docker specific settings
WWWGROUP=1000
WWWUSER=1000
